{
  "ignorePatterns": ["**/e2e/**"],
  "overrides": [
    {
      "files": ["src/*.ts", "!src/environments/*.ts"],
      "parserOptions": {
        "project": [
          "projects/kypo-sandbox-agenda-example/tsconfig.lint-app.json",
          "projects/kypo-sandbox-agenda-example/tsconfig.spec.json"
        ],
        "createDefaultProgram": true
      },
      "rules": {
        "@angular-eslint/directive-selector": [
          "error",
          { "type": "attribute", "prefix": "kypo", "style": "camelCase" }
        ],
        "@angular-eslint/component-selector": [
          "error",
          { "type": "element", "prefix": "app", "style": "kebab-case" }
        ]
      }
    },
    {
      "files": ["*.component.html", "e2e/*"],
      "rules": {}
    }
  ]
}
